{
  "name": "api",
  "description": "",
  "version": "0.0.1",
  "author": "sabishii1",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --preset @app/meta/jest/node --passWithNoTests --coverage",
    "test:e2e": "jest --preset @app/meta/jest/node-e2e --passWithNoTests",
    "prebuild": "rm -rf ./dist",
    "build": "tsc -p ./tsconfig.build.json",
    "dev": "nodemon --exec \"pnpm run build && pnpm run start\"",
    "start": "node ./dist/main.js"
  },
  "nodemonConfig": {
    "watch": [
      "./src/",
      "./tsconfig*.json",
      "./node_modules/**/dist/**/*.js"
    ],
    "ext": "ts,js,json",
    "ignore": [
      "./dist/"
    ],
    "ignoreRoot": [
      ".git"
    ],
    "signal": "SIGTERM"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.4",
    "@nestjs/core": "^9.0.4",
    "@nestjs/platform-express": "^9.0.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.6"
  },
  "devDependencies": {
    "@app/meta": "workspace:*",
    "@jest/types": "^28.1.3",
    "@nestjs/testing": "^9.0.4",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/node": "^16",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0"
  }
}
